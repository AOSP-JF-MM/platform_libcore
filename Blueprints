// ANDROIDMK TRANSLATION ERROR: endif from unsupported contitional
// endif
//
// Build for the host.
//

java_library_host {
    srcs: ["dex/src/main/java/**/*.java"],
    tags: ["optional"],
    name: "dex-host",
    target: {
        darwin: {
            disabled: true,
        },
    },
}

